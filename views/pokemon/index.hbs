<h2>Lista de Pokémon</h2>

<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Región</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each pokemons}}
            <tr>
                <td>{{name}}</td>
                <td>{{type}}</td>
                <td>{{Region.name}}</td>
                <td>
                    <a href="/pokemons/{{id}}">Ver</a>
                    <a href="/pokemons/{{id}}/edit">Editar</a>
                    <form action="/pokemons/{{id}}?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

<a href="/pokemons/new">Agregar nuevo Pokémon</a>