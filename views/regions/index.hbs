<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Regiones Pokémon</h1>
        <a href="/regions/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nueva Región
        </a>
    </div>

    {{#if regions.length}}
        <div class="row">
            {{#each regions}}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title ">{{this.name}}</h5>
                            <a href="/regions/{{this.id}}/edit" class="btn btn-warning">Editar</a>
                            <form action="/regions/{{this.id}}/delete" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p>No hay regiones disponibles.</p>
    {{/if}}
</div>